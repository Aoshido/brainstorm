<div class="card-container">
    {{ form_start(form) }}
    <div class="card-background">

        <div class="card-frame">

            <div class="frame-header">
                <h1 class="name">
                    {{ form_widget(form.title, { 'attr': {'class': 'form-transparent-background' , 'placeholder' : 'Title' , 'maxlength' : 25 } }) }}
                </h1>
                <i class="ms ms-u" id="mana-icon"></i>
            </div>

            <div class="frame-text-box">
                {{ form_widget(form.description, { 'attr': {'class': 'form-transparent-background', 'placeholder' : 'Description' , 'maxlength' : 255 } }) }}

                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Add</button>
                </div>
            </div>


            <div class="frame-bottom-info inner-margin">
                <div class="fbi-left">
                    <p>??/??</p>
                </div>

                <div class="fbi-center"></div>

                <div class="fbi-right">
                    username
                </div>
            </div>

        </div>

    </div>
    {{ form_end(form) }}
</div>
