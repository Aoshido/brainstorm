{% extends 'base.html.twig' %}

{% block nav_link_add %} active {% endblock nav_link_add %}

{% block body %}
    <main role="main" class="inner cover">
        {{ form_start(form) }}
        <div class="container">
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">{{ form_label(form.title) }}</label>
                <div class="col-sm-10">
                    {{ form_widget(form.title) }}
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">{{ form_label(form.description) }}</label>
                <div class="col-sm-10">
                    {{ form_widget(form.description) }}
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Add</button>
                </div>
            </div>
        </div>
        <div class="container">
            <table class="table table-sm">
                <thead>
                    <tr>
                        <th>
                            Id
                        </th>
                        <th>
                            title
                        </th>
                        <th>
                            description
                        </th>
                    </tr>
                </thead>
                <tbody>
                    {% for idea in ideas %}
                        <tr>
                            <td>
                                {{idea.id}}
                            </td>
                            <td>
                                {{idea.title}}
                            </td>
                            <td>
                                {{idea.description}}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        {{ form_end(form) }}
    </main>
{% endblock %}

