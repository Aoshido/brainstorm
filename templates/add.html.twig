{% extends 'base.html.twig' %}

{% block nav_link_add %} active {% endblock nav_link_add %}

{% block body %}
    <main role="main" class="inner cover">

        <div class="row">
            <div class="col-md-4">
                <div class="container container-fluid light-background">
                    {{ form_start(form) }}
                    <div class="form-group row">
                        {{ form_label(form.title,null,{ 'label-attr': {'class' : 'col-sm-2 col-form-label'} } ) }}
                        <div class="col-sm-10">
                            {{ form_widget(form.title, { 'attr': {'class': 'form-control'} }) }}
                        </div>
                    </div>
                    <div class="form-group row">
                        {{ form_label(form.description,null,{ 'label-attr': {'class' : 'col-sm-2 col-form-label'} } ) }}
                        <div class="col-sm-10">
                            {{ form_widget(form.description, { 'attr': {'class': 'form-control'} }) }}
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-sm-10">
                            <button type="submit" class="btn btn-primary">Add</button>
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
            <div class="col-md-8">
                <div class="container container-fluid light-background">
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>
                                    Id
                                </th>
                                <th>
                                    title
                                </th>
                                <th>
                                    description
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for idea in ideas %}
                                <tr>
                                    <td>
                                        {{idea.id}}
                                    </td>
                                    <td>
                                        {{idea.title}}
                                    </td>
                                    <td>
                                        {{idea.description}}
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </main>
{% endblock %}

